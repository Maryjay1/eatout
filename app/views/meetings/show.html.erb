<div class='d-flex flex-column align-items-center'>
<h1>Meeting</h1>
  <div>
    <%= @meeting.restaurant.name %>
  </div>
  <div
  id="map"
  style="width: 100%;
  height: 400px;"
  data-markers="<%= @marker.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
  <br>
  <div>
    <% if Guest.where(meeting: @meeting) == [] %>
    <%= simple_form_for Guest.new do |f| %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.hidden_field :meeting_id, :value => params[:id] %>
      <%#= f.hidden_field :meet_time, :value => Date.today %>
      <%= f.submit %>
    <% end %>
      <%#= link_to 'Join the meeting!', guests,class: 'btn btn-info' %>
    <% end %>
    <%= link_to 'Meetings list', meetings_path, class: 'btn btn-info' %>
  </div>
</div>
