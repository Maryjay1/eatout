<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="card">
  <div class="profile-pic">
  <%= cl_image_tag current_user.photo, alt: "profile-pic", class: "card-avatar" %>
    <div class="profile-pic-info">
      <h1><%= current_user.first_name %></h1>
      <div class="profile-pic-rating">
        <% if @average_rating %>
          <% @average_rating.times do |i| %>
            <i class="fas fa-star"></i>
          <% end %>
        <% else %>
        No ratings yet
        <% end %>

      </div>
    </div>
  </div>
  <div class="information-card">
    <div class="information-card-buffer">
      <div class="interests-card">
        <div class="card-title-edit">
          <h2>Food Preferences</h2>
          <%= link_to edit_user_registration_path do %>
          <i class="far fa-edit"></i>
          <% end %>
        </div>
        <p><%= current_user.food_preferences %></p>
      </div>
    </div>
    <div class="interests-card">
      <div class="card-title-edit">
        <h2>Interests</h2>
        <%= link_to edit_user_registration_path do %>
          <i class="far fa-edit"></i>
        <% end %>
      </div>
      <p><%= current_user.interest %></p>
    </div>
  </div>
</div>

