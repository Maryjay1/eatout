<div class='d-flex flex-column align-items-center'>
  <div class='cards'>
    <% @meetings.each do |meeting| %>
      <div class = 'card-meeting p-3 my-1'>
        <div class="card-meeting-text">
          <h2 class= 'card-meeting-title'><%= meeting.restaurant.name %></h2>
          <h3><%= meeting.user.username %></h3>
          <p><%= meeting.restaurant.address %></p>
          <p><%= meeting.meet_time.strftime("%H:%M")%></p>
        </div>

        <div class='d-flex align-items-center flex-column'>
          <%= link_to 'Meeting Details', meeting_path(meeting), class: 'btn btn-info' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
