<title>Mango - Not having a companion to eat with when out. </title>

<div>
  <div class="title-card">
    <h1 class="title">Restaurants</h1>
  </div>
  <div class="d-flex justify-content-center">
    <ul class="nav nav-pills" id="banner-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="banner-map-tab" data-toggle="pill" href="#mapbox" role="tab" aria-controls="mapbox" aria-selected="true" onclick="return false">Map</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="banner-list-tab" data-toggle="pill" href="#list" role="tab" aria-controls="list" aria-selected="false" onclick="return false">List</a>
      </li>
    </ul>
  </div>
  <div class="tab-content">
    <div id="mapbox" class="tab-pane fade in active show ">
      <div id='map-button'>
        <%= render 'map' %>
      </div>
    </div>
    <div id="list" class="tab-pane fade">
      <div class="container-fluid">
        <div class="row justify-content-around">
          <% @restaurants.each do |restaurant| %>
            <div class="card-restaurant-wrap col-sm-10 col-md-6 col-lg-4 d-flex justify-content-center">
              <div class="card-restaurant">
                <%= image_tag restaurant.photo %>
                <p class='rest-distance p-1'><%= restaurant.distance_to([51.515696, -0.104113]).round(1)%> Miles</p>
                <div class="card-restaurant-text">
                  <h3 class="rest-title"><%= restaurant.name %></h3>
                  <% if @meetingPlaces.include?(restaurant) %>
                    <div class="btn-thin btn-green">
                      <%= link_to 'Join a meal', available_meetings_path(restaurant) %>
                    </div>
                    <div class="btn-orange btn-thin">
                      <%= link_to 'Arrange a meal', restaurant_path(restaurant) %>
                    </div>
                  <% else %><br>
                    <div class="btn-orange btn-thin">
                      <%= link_to 'Arrange a meal', restaurant_path(restaurant) %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
