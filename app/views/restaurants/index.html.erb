<h1>Restaurants</h1>
<div class="d-flex justify-content-center">
  <ul class="nav nav-pills" id="banner-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="banner-map-tab" data-toggle="pill" href="#mapbox" role="tab" aria-controls="mapbox" aria-selected="true" onclick="return false">Map</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="banner-list-tab" data-toggle="pill" href="#list" role="tab" aria-controls="list" aria-selected="false" onclick="return false">List</a>
    </li>
  </ul>
</div>
<div class="tab-content">
  <div id="mapbox" class="tab-pane fade in active show ">
    <div id='map-button'>
      <%= render 'map' %>
    </div>
  </div>
  <div id="list" class="tab-pane fade">
    <% @restaurants.each do |restaurant| %>
    <div class="card-restaurant">
      <img src="https://images.pexels.com/photos/62097/pexels-photo-62097.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" />
      <div class="card-restaurant-infos">
        <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
        <% if @meetingPlaces.include?(restaurant) %>
          <%= link_to 'Meetings open now', available_meetings_path(restaurant), class: 'btn btn-info' %>
          <%= link_to 'Create a new meeting', restaurant_path(restaurant), class: 'btn btn-info' %>
        <% else %>
          <%= link_to 'Create a new meeting', restaurant_path(restaurant), class: 'btn btn-info' %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
